<script src="https://cdn.jsdelivr.net/npm/bs5-lightbox@1.8.3/dist/index.bundle.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function () {
    function initializeStarRating(containerSelector) {
        const ratingStarsContainer = document.querySelector(containerSelector);
        if (!ratingStarsContainer) return;
        const labels = ratingStarsContainer.querySelectorAll('label.star-label-interactive');
        function highlightStars(selectedLabel) {
            let current = selectedLabel;
            let passSelected = false;
            labels.forEach(lbl => {
                const icon = lbl.querySelector('i');
                if (lbl === selectedLabel) passSelected = true;
            });
            let tempLabel = selectedLabel;
            labels.forEach(l => l.querySelector('i').classList.replace('fas','far'));
            while(tempLabel){
                tempLabel.querySelector('i').classList.replace('far','fas');
                if(tempLabel.htmlFor === labels[0].htmlFor) break;
                let prevSibling = tempLabel.previousElementSibling;
                while(prevSibling && !prevSibling.matches('label.star-label-interactive')){
                    prevSibling = prevSibling.previousElementSibling;
                }
                tempLabel = prevSibling;
            }
        }
        function resetStarsToChecked() {
            labels.forEach(lbl => { lbl.querySelector('i').classList.replace('fas','far'); });
            const checkedRadio = ratingStarsContainer.querySelector('input[name="rating"]:checked');
            if (checkedRadio) {
                let targetLabel = ratingStarsContainer.querySelector('label[for="' + checkedRadio.id + '"]');
                 while(targetLabel){
                    targetLabel.querySelector('i').classList.replace('far','fas');
                    if(targetLabel.htmlFor === labels[0].htmlFor) break; 
                    let prevSibling = targetLabel.previousElementSibling;
                    while(prevSibling && !prevSibling.matches('label.star-label-interactive')){
                        prevSibling = prevSibling.previousElementSibling;
                    }
                    targetLabel = prevSibling;
                }
            }
        }
        labels.forEach(label => {
            label.addEventListener('mouseover', function () { highlightStars(this); });
            label.addEventListener('mouseout', function () { resetStarsToChecked(); });
            label.addEventListener('click', function() {
                const radio = document.getElementById(this.htmlFor);
                if(radio) { radio.checked = true; radio.dispatchEvent(new Event('change', { bubbles: true }));}
                highlightStars(this);
            });
        });
        resetStarsToChecked();
    }
    initializeStarRating('#ratingStarsDetail_<%= sc._id %>');

    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
            let customValid = true;
            if (form.elements.orderType && form.elements.orderType.value === 'rent') {
                const rentalOptions = form.querySelectorAll('input[name="rentalOptionIndex"]');
                const isOneChecked = Array.from(rentalOptions).some(radio => radio.checked);
                const errorDiv = form.querySelector('#rentalOptionErrorDetail_<%= sc._id %>');
                if (!isOneChecked && rentalOptions.length > 0) {
                    customValid = false;
                    if(errorDiv) errorDiv.style.display = 'block';
                } else {
                    if(errorDiv) errorDiv.style.display = 'none';
                }
            }
             if (form.id === 'orderPanelForm_<%= sc._id %>') {
                const panelUsernameInput = form.querySelector('#panelUsername_<%= sc._id %>');
                if (panelUsernameInput && !panelUsernameInput.checkValidity()) {
                    customValid = false;
                }
            }

            if (!form.checkValidity() || !customValid) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    });

    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('provision') === 'success' && urlParams.get('orderId')) {
        const panelUrl = urlParams.get('panelUrl');
        const username = urlParams.get('username');
        const password = urlParams.get('password');
        const modalBody = document.getElementById('panelProvisionSuccessModalBody');
        if(modalBody) {
            modalBody.innerHTML = `
                <p>Layanan panel Anda telah berhasil dibuat!</p>
                <ul class="list-group list-group-flush">
                    ${panelUrl ? `<li class="list-group-item"><strong>URL Panel:</strong> <a href="${panelUrl}" target="_blank">${panelUrl}</a></li>` : ''}
                    ${username ? `<li class="list-group-item"><strong>Username:</strong> ${username}</li>` : ''}
                    ${password ? `<li class="list-group-item"><strong>Password:</strong> <code>${password}</code> (Harap segera ganti password Anda!)</li>` : ''}
                </ul>
                <p class="mt-2 small text-warning">Simpan detail ini dengan aman. Password yang ditampilkan adalah password awal.</p>
            `;
            var successModal = new bootstrap.Modal(document.getElementById('panelProvisionSuccessModal'));
            successModal.show();
            
            const newUrl = window.location.pathname + window.location.hash;
            window.history.replaceState({}, document.title, newUrl);
        }
    } else if (urlParams.get('provision') === 'failed' && urlParams.get('orderId')) {
         const failMessage = urlParams.get('message') || "Gagal membuat layanan panel. Silakan hubungi support.";
         const existingAlert = document.querySelector('.alert-provision-fail');
         if(!existingAlert){
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-danger alert-dismissible fade show mt-3 alert-provision-fail';
            alertDiv.setAttribute('role', 'alert');
            alertDiv.innerHTML = `<i class="fas fa-times-circle me-2"></i>${decodeURIComponent(failMessage)}<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;
            const mainContainer = document.querySelector('#sc-detail-page .col-lg-8');
            if(mainContainer) mainContainer.insertBefore(alertDiv, mainContainer.firstChild);
         }
         const newUrl = window.location.pathname + window.location.hash;
         window.history.replaceState({}, document.title, newUrl);
    }

});
</script>
