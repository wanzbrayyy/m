<%# views/index.ejs %>

<%# Hero Section %>
<div class="hero-section text-white text-center py-5 mb-5 rounded-3 shadow-lg">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3"><i class="fas fa-rocket me-2"></i> Jelajahi Dunia Source Code</h1>
        <p class="lead col-lg-8 mx-auto mb-4">Temukan, beli, atau sewa ribuan source code berkualitas untuk mempercepat proyek pengembangan Anda. Dari skrip sederhana hingga aplikasi kompleks.</p>
        <form action="/sc-list" method="GET" class="row g-3 justify-content-center mb-4">
            <div class="col-md-6 col-lg-5">
                <div class="input-group input-group-lg">
                    <input type="search" name="keyword" class="form-control" placeholder="Cari source code (misal: e-commerce php)..." aria-label="Cari source code">
                    <button class="btn btn-warning" type="submit"><i class="fas fa-search"></i></button>
                </div>
            </div>
        </form>
        <div>
            <a href="/sc-list" class="btn btn-light btn-lg me-2" type="button"><i class="fas fa-layer-group me-1"></i> Lihat Semua SC</a>
            <% if (!currentUser) { %>
                <a href="/register" class="btn btn-outline-light btn-lg" type="button"><i class="fas fa-user-plus me-1"></i> Gabung Sekarang</a>
            <% } else if(currentUser.role === 'customer') { %>
                <a href="/dashboard/profile" class="btn btn-info btn-lg" type="button"><i class="fas fa-handshake me-1"></i> Jadi Seller? (Upgrade Akun)</a>
            <% } %>
        </div>
    </div>
</div>

<%# Featured Categories (Contoh) %>
<section class="mb-5">
    <h2 class="text-center mb-4 section-title"><i class="fas fa-tags me-2"></i>Kategori Populer</h2>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3 text-center">
        <% const popularCategories = [
            { name: "Web PHP", icon: "fab fa-php", color: "text-primary" },
            { name: "Aplikasi Android", icon: "fab fa-android", color: "text-success" },
            { name: "Script Python", icon: "fab fa-python", color: "text-warning" },
            { name: "Template HTML", icon: "fab fa-html5", color: "text-danger" },
            { name: "Bot Script", icon: "fas fa-robot", color: "text-info" }
        ]; %>
        <% popularCategories.forEach(cat => { %>
            <div class="col">
                <a href="/sc-list?category=<%= encodeURIComponent(cat.name) %>" class="text-decoration-none">
                    <div class="card category-card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column justify-content-center align-items-center">
                            <i class="<%= cat.icon %> fa-3x mb-2 <%= cat.color %>"></i>
                            <h5 class="card-title fs-6 mb-0 text-dark"><%= cat.name %></h5>
                        </div>
                    </div>
                </a>
            </div>
        <% }) %>
    </div>
</section>


<%# Source Code Terbaru %>
<section class="mb-5">
    <h2 class="text-center mb-4 section-title"><i class="fas fa-star me-2"></i>Source Code Terbaru</h2>
    <% if (latestSc && latestSc.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% latestSc.forEach(sc => { %>
        <div class="col d-flex">
            <div class="card sc-card h-100 shadow-sm border-0 w-100 position-relative">
                <%# Quick View Button - akan ditambahkan logic JS nya nanti %>
                <button class="btn btn-sm btn-outline-secondary quick-view-btn" data-sc-id="<%= sc._id %>" title="Lihat Cepat">
                    <i class="fas fa-eye"></i>
                </button>
                <% if (sc.screenshots && sc.screenshots.length > 0) { %>
                    <a href="/sc/<%= sc._id %>">
                        <img src="/<%= sc.screenshots[0].replace(/\\/g, '/') %>" class="card-img-top sc-card-img" alt="<%= sc.title %>">
                    </a>
                <% } else { %>
                    <a href="/sc/<%= sc._id %>">
                        <div class="card-img-top sc-card-img-placeholder d-flex align-items-center justify-content-center bg-light text-muted">
                            <i class="fas fa-image fa-3x"></i>
                        </div>
                    </a>
                <% } %>
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fs-6"><a href="/sc/<%= sc._id %>" class="text-dark text-decoration-none stretched-link"><%= sc.title %></a></h5>
                    <p class="card-text text-muted small mb-2 flex-grow-1"><%= sc.description.substring(0, 80) %>...</p>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span class="badge bg-light text-primary border"><i class="fas fa-tag me-1"></i><%= sc.category %></span>
                        <% if (sc.averageRating && sc.averageRating > 0) { %>
                            <span class="text-warning small">
                                <% for(let i = 1; i <= 5; i++) { %><i class="<%= i <= sc.averageRating ? 'fas' : 'far' %> fa-star"></i><% } %>
                                (<%= sc.averageRating.toFixed(1) %>)
                            </span>
                        <% } %>
                    </div>
                    <% if (!sc.is_for_rent_only && sc.price_buy) { %>
                        <p class="fw-bold text-success mb-1">Rp <%= sc.price_buy.toLocaleString('id-ID') %></p>
                    <% } else if (sc.rental_options && sc.rental_options.length > 0) { %>
                         <p class="fw-bold text-info mb-1">Mulai Rp <%= sc.rental_options.reduce((min, p) => p.price < min ? p.price : min, sc.rental_options[0].price).toLocaleString('id-ID') %></p>
                    <% } %>
                </div>
                <div class="card-footer bg-white border-top-0 pt-0">
                    <a href="/sc/<%= sc._id %>" class="btn btn-primary btn-sm w-100"><i class="fas fa-search-plus me-1"></i>Lihat Detail</a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <% } else { %>
    <p class="text-center text-muted">Belum ada source code yang tersedia.</p>
    <% } %>
</section>

