<h1 class="text-glow-primary"><i class="fas fa-users-cog"></i> Manajemen Pengguna</h1>
<hr class="main-hr">
<% if (users && users.length > 0) { %>
<div class="card">
    <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th>Nama</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Tanggal Daftar</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><span class="badge bg-<%= user.role === 'admin' ? 'danger' : (user.role === 'seller' ? 'info' : 'secondary') %>"><%= user.role %></span></td>
                    <td><%= new Date(user.createdAt).toLocaleDateString('id-ID') %></td>
                    <td>
                        <button class="btn btn-sm btn-outline-warning disabled"><i class="fas fa-edit"></i> Edit (N/A)</button>
                        <button class="btn btn-sm btn-outline-danger disabled"><i class="fas fa-trash"></i> Hapus (N/A)</button>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<% } else { %>
<p class="text-muted">Tidak ada pengguna terdaftar.</p>
<% } %>
<style> .text-glow-primary { text-shadow: 0 0 8px var(--primary-color); } </style>