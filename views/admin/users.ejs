<h1><i class="fas fa-users-cog"></i> Manajemen Pengguna</h1>
<hr>
<% if (users && users.length > 0) { %>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nama</th>
                <th>Email</th>
                <th>Role</th>
                <th>Tanggal Daftar</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><span class="badge bg-secondary"><%= user.role %></span></td>
                <td><%= new Date(user.createdAt).toLocaleDateString('id-ID') %></td>
                <td>
                    <button class="btn btn-sm btn-warning disabled"><i class="fas fa-edit"></i> Edit</button>
                    <button class="btn btn-sm btn-danger disabled"><i class="fas fa-trash"></i> Hapus</button>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<% } else { %>
<p>Tidak ada pengguna terdaftar.</p>
<% } %>