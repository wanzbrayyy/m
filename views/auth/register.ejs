<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header"><i class="fas fa-user-plus"></i> Register Akun Baru</div>
            <div class="card-body">
                <form action="/api/auth/register" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Nama Lengkap</label>
                        <input type="text" name="name" id="name" class="form-control" value="<%= typeof name != 'undefined' ? name : '' %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email" class="form-control" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirm_password" class="form-label">Konfirmasi Password</label>
                        <input type="password" name="confirm_password" id="confirm_password" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="role" class="form-label">Saya ingin mendaftar sebagai:</label>
                        <select name="role" id="role" class="form-select" required>
                            <option value="customer" <%= (typeof role != 'undefined' && role === 'customer') ? 'selected' : '' %>>User Biasa (Pembeli)</option>
                            <option value="seller" <%= (typeof role != 'undefined' && role === 'seller') ? 'selected' : '' %>>Seller (Penjual SC)</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-success w-100"><i class="fas fa-check-circle"></i> Register</button>
                </form>
                <p class="mt-3 text-center">Sudah punya akun? <a href="/login">Login di sini</a></p>
            </div>
        </div>
    </div>
</div>